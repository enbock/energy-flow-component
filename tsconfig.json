{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "target": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./build/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "sourceMap": true,
    "lib": [
      "dom",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src",
      "./jasmine"
    ]
  },
  "include": [
    "src",
    "jasmine",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
